{
  "name": "express-api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env DEBUG={{name}}:* NODE_ENV=development node --env-file-if-exists=.env --watch src/server.js",
    "inspect": "cross-env DEBUG={{name}}:* NODE_ENV=development node --env-file-if-exists=.env --inspect --watch src/server.js",
    "start": "npm run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check './**/*.{js,mjs,cjs,json}'",
    "prettier:fix": "prettier --write './**/*.{js,mjs,cjs,json}'",
    "fix": "npm run lint:fix && npm run prettier:fix"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cross-env": "^10.0.0",
    "debug": "^4.4.1",
    "eslint": "^9.33.0",
    "eslint-plugin-sonarjs": "^3.0.4",
    "prettier": "^3.6.2"
  },
  "imports": {
    "#app/*": "./src/*"
  }
}
